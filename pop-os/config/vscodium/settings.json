{
    "editor.accessibilitySupport": "off",
    "editor.insertSpaces": true,
    "editor.lineNumbers": "on",
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [
        { "column": 80, "color": "#00A000" },
        { "column": 100, "color": "#AAAA00" },
        { "column": 120, "color": "#A00000" }
    ],
    "editor.suggestSelection": "first",
    "editor.tabSize": 4,
    "explorer.autoReveal": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "extensions.ignoreRecommendations": true,
    "telemetry.telemetryLevel": "off",
    "terminal.integrated.scrollback": 100000,
    "update.mode": "none",
    "window.zoomLevel": 3,
    "workbench.colorCustomizations": { "editorRuler.foreground": "#B4003C" },
    "workbench.colorTheme": "Default Dark+",
    "workbench.sideBar.location": "left",
    "[shellscript]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": false,
        "editor.detectIndentation": false
    },
    "[c]": {
        "editor.rulers": [ { "column": 79, "color": "#A00000" } ]
    },
    "[css]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
    },
    "[html]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.defaultFormatter": "vscode.html-language-features",
    },
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.defaultFormatter": "vscode.typescript-language-features",
    },
    "[java]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false
    },
    "[json]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": true,
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[makefile]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": false,
        "editor.detectIndentation": false
    },
    "[python]": {
        "editor.rulers": [
            { "column": 72, "color": "#008000" },
            { "column": 79, "color": "#A00000" }
        ]
    },
    "security.workspace.trust.banner": "never",
    "security.workspace.trust.enabled": false,
    "editor.lightbulb.enabled": "off",
    "editor.smoothScrolling": true,
    "workbench.list.smoothScrolling": true,
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.gpuAcceleration": "off",
    "window.dialogStyle": "native",
    "workbench.startupEditor": "none",
    "editor.stickyScroll.enabled": false
}