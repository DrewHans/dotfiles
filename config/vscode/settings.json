{
    "editor.accessibilitySupport": "off",
    "editor.insertSpaces": true,
    "editor.lineNumbers": "on",
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [
        { "column": 80, "color": "#00A000" },
        { "column": 100, "color": "#AAAA00" },
        { "column": 120, "color": "#A00000" }
    ],
    "editor.suggestSelection": "first",
    "editor.tabSize": 4,
    "explorer.autoReveal": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "extensions.ignoreRecommendations": true,
    "java.home":"${env:JAVA_HOME}",
    "python.languageServer": "Microsoft",
    "python.pythonPath": "${env:python3}",
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "terminal.integrated.scrollback": 100000,
    "update.mode": "none",
    "window.zoomLevel": 0,
    "workbench.colorCustomizations": { "editorRuler.foreground": "#B4003C" },
    "workbench.colorTheme": "Default Dark+",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.sideBar.location": "left",
    "[c]": {
        "editor.rulers": [ { "column": 79, "color": "#A00000" } ]
    },
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": true
    },
    "[json]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": true
    },
    "[makefile]": {
        "editor.insertSpaces": false
    },
    "[python]": {
        "editor.rulers": [
            { "column": 72, "color": "#008000" },
            { "column": 79, "color": "#A00000" }
        ]
    }
}